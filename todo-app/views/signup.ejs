<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="csrfToken" content="<%= csrfToken %>">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/public/css/styles.css" />
  </head>
  <body>
    <div class="grid grid-cols-6">
      <div class="col-start-3 col-span-2">
        <%- include('header.ejs') %>
        <h6 class="py-4">Signup as a new User</h6>
        <form action="/users" method="post">
          <input type="hidden" value="<%= csrfToken %>" name="_csrf">
          <div class="py-3">
            <label for="firstName">First Name:</label>
            <input
              type="text"
              name="firstName"
              class="border border-gray-300 text-gray-900 rounded w-full p-2"
            />
          </div>
          <div>
            <label for="lastName">Last Name:</label>
            <input
              type="text"
              name="lastName"
              class="border border-gray-300 text-gray-900 rounded w-full p-2"
            />
          </div>
          <div>
            <label for="email">Email:</label>
            <input
              type="email"
              name="email"
              class="border border-gray-300 text-gray-900 rounded w-full p-2"
            />
          </div>
          <div>
            <label for="password">Password:</label>
            <input
              type="password"
              name="password>"
              class="border border-gray-300 text-gray-900 rounded w-full p-2"
            />
          </div>
          <div>
            <button type="submit" class="text-white bg-green-600 hover:bg-green-800 font-medium rounded px-5 py-2">Sign Up</button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
